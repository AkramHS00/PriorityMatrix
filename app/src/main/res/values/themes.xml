<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PriorityMatrix" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>


    <style name="TextInputLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:textSize">18sp</item>

    </style>


    <!-- Light Mode -->
    <style name="SCREEN_COLOR">
        <item name = "android:background">#FFF</item>
    </style>
    <style name="TEXT_ON_BACKGROUND">
        <item name = "android:textColor">#000</item>
    </style>

    <style name="MAIN_TEXT">
        <item name = "android:textColor">#000</item>
    </style>

    <style name="SECONDARY_TEXT">
        <item name = "android:textColor">#808080</item>
    </style>

    <style name="BUTTON">
        <item name = "android:background">?attr/colorPrimary</item>
    </style>

    <style name="SWITCH">
        <item name = "android:backgroundTint">?attr/colorPrimary</item>
        <item name = "android:buttonTint">?attr/colorPrimary</item>

        <item name = "android:trackTint">?attr/colorPrimary</item>
        <item name = "android:thumbTint">?attr/colorPrimary</item>

        android:trackTint="@color/switch_track_color"
        android:thumbTint="@color/switch_thumb_color"
    </style>


</resources>