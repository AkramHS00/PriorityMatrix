<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:id="@+id/linearLayoutCheckboxes">

        <CheckBox
            android:id="@+id/whenDueCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When Due"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/tenMinsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Minutes Before"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/halfHourCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Half An Hour Before"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/oneHourCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Hour Before"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/twoHourCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Hours Before"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/fourHourCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Hours Before"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/oneDayCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Day Before"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Reminder"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Days"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hours"
            android:textSize="18dp"
            android:gravity="center_vertical"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Minutes"
            android:textSize="18dp"
            android:gravity="center_vertical"/>




    </LinearLayout>





</LinearLayout>