<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PriorityMatrix" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Dark Mode -->
    <style name="SCREEN_COLOR">
        <item name = "android:background">#808080</item>
    </style>
    <style name="TEXT_ON_BACKGROUND">
        <item name = "android:textColor">#000</item>
    </style>

    <style name="MAIN_TEXT">
        <item name = "android:textColor">#FFF</item>
    </style>

    <style name="SECONDARY_TEXT">
        <item name = "android:textColor">#808080</item>
    </style>

    <style name="BUTTON">
        <item name = "android:background">?attr/colorPrimary</item>
    </style>

    <style name="SWITCH">
        <item name = "android:backgroundTint">?attr/colorPrimary</item>
        <item name = "android:buttonTint">?attr/colorPrimary</item>
    </style>
</resources>